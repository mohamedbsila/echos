<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Echos | Music Producer & Rapper{% endblock %}</title>
    <link rel="icon" href="{{ asset('favicon.ico') }}" type="image/x-icon">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/preloader.css') }}">
        <link rel="stylesheet" href="{{ asset('css/sound-wave.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/theme-toggle.css') }}">
        <link rel="stylesheet" href="{{ asset('css/logo-heartbeat.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    {% endblock %}
    <meta name="description" content="{% block description %}Official website of Echos - Music Producer & Rapper. Listen to latest tracks, check tour dates, and get in touch for bookings.{% endblock %}">
    <!-- Autoplay helper script -->
    <script>
        // This helps to unlock audio playback on iOS and some browsers
        window.addEventListener('load', function() {
            // Create a short audio context
            const AudioContext = window.AudioContext || window.webkitAudioContext;
            if (AudioContext) {
                const audioCtx = new AudioContext();
                
                // Create and play a silent sound to unlock audio
                const buffer = audioCtx.createBuffer(1, 1, 22050);
                const source = audioCtx.createBufferSource();
                source.buffer = buffer;
                source.connect(audioCtx.destination);
                source.start(0);
                
                // Resume audio context if suspended
                if (audioCtx.state === 'suspended') {
                    audioCtx.resume();
                }
            }
            
            // Create a silent audio element and play it
            const silentAudio = new Audio();
            silentAudio.src = "data:audio/wav;base64,UklGRigAAABXQVZFZm10IBIAAAABAAEARKwAAIhYAQACABAAAABkYXRhAgAAAAEA";
            silentAudio.play().catch(function(err) {
                // Ignore errors - this is just to help with autoplay
            });
        });
    </script>
</head>
<body>
    {% block body %}{% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/preloader.js') }}"></script>
        <script src="{{ asset('js/particles.js') }}"></script>
        <script src="{{ asset('js/sound-wave.js') }}"></script>
        <script src="{{ asset('js/equalizer.js') }}"></script>
        <script src="{{ asset('js/theme-toggle.js') }}"></script>
        <script src="{{ asset('js/background-music.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
</body>
</html>
